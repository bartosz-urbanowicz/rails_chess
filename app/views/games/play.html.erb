<h1>Play Game</h1>
<div><%= @game.rated %></div>
<div><%= @game.time_base %></div>
<div><%= @game.time_increment %></div>

<div class="flex flex-col" >
    <% 8.times do |i|%>
        <div class="flex">
            <% 8.times do |j|%>
                <div class="<%= (i % 2) == (j % 2) ? "bg-neutral-200" : "bg-neutral-900" %> w-[4em] h-[4em]" ></div>
            <% end %>
        </div>
    <% end %>
</div>  
